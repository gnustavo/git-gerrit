# bash completion support for git-gerrit.  Your bash must source
# /usr/share/bash-completion/completions/git before sourcing this.

_git_gerrit ()
{
	__git_has_doubledash && return

	local subcommands="new push query my show checkout co upstream up cherry-pick cp reviewer review abandon restore revert submit web config version"
	local subcommand="$(__git_find_on_cmdline "$subcommands")"
	if [ -z "$subcommand" ]; then
	    __gitcomp "$subcommands"
	fi

        gopts='--debug --help --noop'

	case "$subcommand" in
            new)
                __gitcomp "$gopts --update --onto"
                ;;
            push)
                __gitcomp "$gopts --prune --force --rebase --norebase --draft --submit --base --topic --reviewer --cc"
                ;;
            list|fetch|config|version)
                __gitcomp "$gopts"
                ;;
            show)
                __gitcomp "$gopts --verbose"
                ;;
            update)
                __gitcomp "$gopts --patchsets --noprune --offline"
                ;;
            prune)
                __gitcomp "$gopts --offline"
                ;;
            checkout)
                __gitcomp "$gopts --update"
                ;;
            query)
                __gitcomp "$gopts --limit --verbose"
                ;;
            my)
                __gitcomp "$gopts --limit --verbose changes closed drafts watched starred"
                ;;
            upstream)
                __gitcomp "$gopts --prune"
                ;;
            cherry-pick)
                __git_cherry_pick
                ;;
            reviewer)
                __gitcomp "$gopts --add --confirm --delete"
                ;;
            review|abandon|restore|revert)
                __gitcomp "$gopts --message"
                ;;
            submit)
                __gitcomp "$gopts --no-wait-for-merge"
                ;;
            web)
                __git_web__browse
                ;;
	    *)
                ;;
	esac
}
